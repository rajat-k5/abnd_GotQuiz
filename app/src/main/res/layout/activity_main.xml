<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.gotquiz.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/b3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/quiz_btnn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/imageButton_marginBottom"
            android:layout_marginLeft="@dimen/imageButton_marginSide"
            android:layout_marginStart="@dimen/imageButton_marginSide"
            android:background="@drawable/button_transparent"
            android:contentDescription="QuizButton"
            android:fontFamily="@font/mountains_of_christmas_bold"
            android:onClick="takequiz"
            android:text="@string/quiz"
            android:textColor="@color/button_color"
            android:textSize="@dimen/btn_textSize" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2" />

            <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/imageButton_marginBottom"
            android:layout_marginEnd="@dimen/imageButton_marginSide"
            android:layout_marginRight="@dimen/imageButton_marginSide"
            android:background="@drawable/button_transparent"
            android:contentDescription="FunActivityButton"
            android:fontFamily="@font/mountains_of_christmas_bold"
            android:text="@string/fun"
            android:textColor="@color/button_color"
            android:textSize="@dimen/btn_textSize"
       />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>